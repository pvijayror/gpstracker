!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : t("project.title")
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = #stylesheet_link_tag "nivo-slider.css" 
    = #stylesheet_link_tag "/themes/default/default.css"
    = #javascript_include_tag "jquery.nivo.slider.pack.js"  
    = stylesheet_link_tag "application", :media => "all"
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}
  %body
    = render 'user/shared/menu'
    .container.main
      .content
        .row
          .span12
            = render 'shared/alerts' unless flash.blank?
            %br
            = yield

    = render "user/shared/javascript"

