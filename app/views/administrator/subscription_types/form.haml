.login
  %h2 New Subscription Type
  =simple_form_for([:administrator, subscription_type], :html => {:class => 'form-horizontal' }) do |f|
    =f.input :price
    %br
    =f.input :months
    %br
    =f.input :description
    %br
    =f.input :translation


    .form-actions
      =f.button :submit, :class => 'btn-primary'
      =link_to t("buttons.cancel"), :back, :class => "btn btn-danger"